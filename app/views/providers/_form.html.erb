<%= form_for(@provider) do |f| %>
  <% if @provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% @provider.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type_person %><br />
    <%= radio_button "provider","type_person","fisica" %> Fisica
    <%= radio_button "provider","type_person","juridica" %> Juridica
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :document %><br />
    <%= f.text_field :document %>
  </div>
  <hr />
  Adress:<br />
  <%= render "adress", :provider => f %>
  <hr />
  <div class="field">
    <%= f.label :type_service %><br />
    <%= radio_button "provider","type_service","reforma" %> Reforma
    <%= radio_button "provider","type_service","construcao" %> Construção
    <%= radio_button "provider","type_service","ambos" %> Ambos
  </div>
  <%= render "tasks", :tasks => @tasks %>
  <input type="text" id="new_task" /><input type="button" onclick="add_task()" value="+ Adicionar" />
  <div id="new_tasks"></div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
